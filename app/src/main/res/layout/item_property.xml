<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp"
        android:id="@+id/cardHome"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:orientation="vertical"
            android:elevation="12dp"
            android:id="@+id/cardLinearLayout">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgHome"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:id="@+id/imgPropertyIsFeatured"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginTop="-12dp"
                    android:layout_gravity="top|right"
                    android:src="@drawable/bookmark_star_ui_svgrepo_com"/>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardCornerRadius="16dp"
                android:layout_gravity="bottom">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
            <TextView
                android:id="@+id/tvPropertyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/purple_500"
                android:fontFamily="@font/futuramediumbt"
                android:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_rate_svgrepo_com"
                    android:paddingTop="3dp"
                    android:layout_weight="0.69"
                    android:paddingLeft="10dp"/>
                <TextView
                    android:id="@+id/tvPropertyRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:paddingLeft="2dp"
                    android:paddingRight="5dp"
                    android:paddingTop="4dp"
                    android:text=""
                    android:textColor="@color/purple_500"
                    android:fontFamily="@font/futuramediumbt"
                    android:layout_weight="0.68"/>
                <TextView
                    android:id="@+id/tvPropertyRatingNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:paddingRight="5dp"
                    android:paddingTop="4dp"
                    android:text=""
                    android:textColor="@color/purple_500"
                    android:fontFamily="@font/futuramediumbt"
                    android:layout_weight="0.55"/>

                <TextView
                    android:id="@+id/tvPropertyLowestPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/purple_500"
                    android:fontFamily="@font/futuramediumbt"
                    android:text=""
                    android:textAlignment="textEnd"
                    android:layout_weight="0.4"/>

            </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            </FrameLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
